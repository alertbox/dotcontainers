{
    "id": "sam",
    "name": "AWS Serverless Application Model",
    "version": "0.1.0",
    "description": "Install CLI tool to build, test, debug, and deploy Serverless applications using AWS SAM.",
    "documentationURL": "https://github.com/alertbox/dotcontainers/tree/main/src/sam",
    "options": {
        "version": {
            "type": "string",
            "proposals": [
                "latest"
            ],
            "default": "latest",
            "description": "Select or enter a version."
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "AmazonWebServices.amazon-q-vscode"
            ],
            // Set *default* container specific settings.json values on container create.
            "settings": {
                "aws.telemetry": false,
                "amazonQ.telemetry": false,
                "aws.samcli.enableCodeLenses": true,
                "github.copilot.chat.codeGeneration.instructions": [
                    {
                        "text": "This dev container includes `sam` pre-installed and available on the `PATH` for SAM CLI, AWS Serverless Application development."
                    }
                ]
            }
        }
    },
    "dependsOn": {
        "ghcr.io/devcontainers/features/aws-cli": {}
    }
}
