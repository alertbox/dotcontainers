{
    "id": "bun",
    "name": "Bun CLI",
    "version": "0.1.0",
    "description": "Install Bun CLI, an all-in-one toolkit for JavaScript and TypeScript apps.",
    "options": {
        "version": {
            "type": "string",
            "proposals": [
                "latest"
            ],
            "default": "latest",
            "description": "Select or enter a version."
        },
        "packages": {
            "type": "string",
            "default": "",
            "description": "Optional comma separated list of Node.js-compatible packages to install system-wide."
        },
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "oven.bun-vscode"
            ],
        }
    },
    "dependsOn": {
        "ghcr.io/devcontainers/features/common-utils": {}
    }
}
