{
  "id": "opentofu",
  "name": "OpenTofu",
  "version": "0.1.0",
  "description": "Installs CLI tool for building, changing, and versioning infrastructure safely and efficiently.",
  "options": {
    "version": {
      "type": "string",
      "proposals": [
        "latest"
      ],
      "default": "latest",
      "description": "Select or enter a version."
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "4ops.terraform"
      ],
      // Set *default* container specific settings.json values on container create.
      "settings": {
      }
    }
  },
  "dependsOn": {
    "ghcr.io/devcontainers/features/common-utils": {}
  }
}
